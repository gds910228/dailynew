/**
 * 首页 - 杂志编辑风格
 * Magazine Editorial Layout
 */

.container {
  min-height: 100vh;
  background: var(--color-paper);
  padding-bottom: 40rpx;
}

/* 顶部标题区 */
.page-header {
  padding: var(--space-xl) var(--space-lg) var(--space-lg);
  background: var(--color-ink);
  color: var(--color-paper);
  margin-bottom: var(--space-lg);
}

.page-title {
  font-size: var(--font-size-display);
  font-weight: 700;
  line-height: 1.2;
  letter-spacing: -0.02em;
  margin-bottom: var(--space-sm);
}

.page-subtitle {
  font-size: var(--font-size-caption);
  opacity: 0.7;
  letter-spacing: 0.05em;
  text-transform: uppercase;
}

/* 文章列表 - 不对称网格布局 */
.article-list {
  padding: 0 var(--space-lg);
}

/* 第一篇文章 - 大卡片，杂志封面式 */
.article-card:first-child {
  margin-bottom: var(--space-xl);
}

.article-card:first-child .card-image {
  height: 560rpx;
}

.article-card:first-child .card-title {
  font-size: var(--font-size-h1);
  font-weight: 700;
  line-height: 1.3;
  letter-spacing: -0.01em;
}

/* 通用卡片样式 */
.article-card {
  background: #fff;
  border-radius: var(--radius-lg);
  overflow: hidden;
  margin-bottom: var(--space-lg);
  box-shadow: var(--shadow-md);
  transition: transform var(--transition-normal);
  position: relative;
}

.article-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--color-accent);
  opacity: 0;
  transition: opacity var(--transition-normal);
}

.article-card:active {
  transform: scale(0.98);
}

.article-card:active::before {
  opacity: 1;
}

/* 卡片图片 - 杂志风格 */
.card-image {
  width: 100%;
  height: 420rpx;
  display: block;
  position: relative;
}

.card-image::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.3), transparent);
  pointer-events: none;
}

/* 卡片内容 */
.card-content {
  padding: var(--space-lg);
  position: relative;
}

/* 标题 - 杂志式排版 */
.card-title {
  font-size: var(--font-size-h2);
  font-weight: 600;
  color: var(--color-ink);
  line-height: 1.4;
  margin-bottom: var(--space-md);
  letter-spacing: -0.01em;
}

/* 描述 */
.card-desc {
  font-size: var(--font-size-body);
  color: var(--color-text-secondary);
  line-height: 1.7;
  margin-bottom: var(--space-md);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 日期标签 - 杂志风格 */
.card-date {
  font-size: var(--font-size-small);
  color: var(--color-text-tertiary);
  letter-spacing: 0.05em;
  text-transform: uppercase;
  position: relative;
  padding-left: 24rpx;
}

.card-date::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 12rpx;
  height: 12rpx;
  background: var(--color-accent);
  border-radius: 50%;
}

/* 加载状态 - 杂志风格 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-xxl) 0;
}

.loading-text {
  font-size: var(--font-size-body);
  color: var(--color-text-secondary);
  margin-top: var(--space-md);
  letter-spacing: 0.05em;
  text-transform: uppercase;
}

/* 空状态 - 杂志风格 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-xxl) var(--space-lg);
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: var(--space-lg);
  opacity: 0.2;
}

.empty-text {
  font-size: var(--font-size-body);
  color: var(--color-text-tertiary);
  letter-spacing: 0.02em;
}

/* 动画 - 卡片入场 */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.article-card {
  animation: slideUp 0.6s ease-out backwards;
}

.article-card:nth-child(1) { animation-delay: 0s; }
.article-card:nth-child(2) { animation-delay: 0.1s; }
.article-card:nth-child(3) { animation-delay: 0.2s; }
.article-card:nth-child(4) { animation-delay: 0.3s; }
.article-card:nth-child(5) { animation-delay: 0.4s; }
