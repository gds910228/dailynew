/* pages/profile/profile.wxss */
page {
  background: #f5f5f5;
}

/* 顶部用户信息区 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx 40rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  background: #fff;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 10rpx;
}

.app-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 统计数据卡片 */
.stats-card {
  display: flex;
  background: #fff;
  margin: -30rpx 30rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 36rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  background: #eee;
}

/* 标签切换 */
.tabs {
  display: flex;
  background: #fff;
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.04);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: 500;
}

/* 内容列表 */
.content-list {
  padding: 0 30rpx;
}

.list-item {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  align-items: center;
  position: relative;
}

.item-thumb {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.item-content {
  flex: 1;
  margin-left: 20rpx;
  margin-right: 40rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 15rpx;
  font-size: 24rpx;
}

.item-category {
  padding: 4rpx 12rpx;
  background: #f0f0f0;
  color: #666;
  border-radius: 6rpx;
}

.item-time {
  color: #999;
}

.delete-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
  padding: 10rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background: #fff;
  border-radius: 16rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 清空按钮 */
.clear-btn {
  margin: 20rpx 30rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ff4d4f;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.04);
}

/* 底部免责声明 */
.footer-disclaimer {
  text-align: center;
  padding: 40rpx 30rpx;
  font-size: 22rpx;
  color: #999;
  line-height: 1.6;
}
