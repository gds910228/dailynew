/**
 * 个人中心 - 现代简约风格
 * Modern Minimalist Design
 */

page {
  background: var(--color-paper);
}

/* 顶部用户信息区 - 大胆设计 */
.header {
  background: var(--color-ink);
  padding: var(--space-xxl) var(--space-lg) var(--space-xl);
  position: relative;
  overflow: hidden;
}

/* 装饰性背景 */
.header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: var(--color-accent);
  opacity: 0.1;
  border-radius: 50%;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: var(--radius-lg);
  background: #fff;
  padding: 12rpx;
  margin-bottom: var(--space-md);
  box-shadow: var(--shadow-lg);
}

.app-name {
  font-size: var(--font-size-h2);
  font-weight: 700;
  color: #fff;
  margin-bottom: var(--space-sm);
  letter-spacing: -0.01em;
}

.app-desc {
  font-size: var(--font-size-caption);
  color: rgba(255, 255, 255, 0.6);
  letter-spacing: 0.03em;
  text-transform: uppercase;
}

/* 统计数据卡片 - 玻璃态效果 */
.stats-card {
  display: flex;
  background: #fff;
  margin: -30rpx var(--space-lg) var(--space-lg);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  box-shadow: var(--shadow-md);
  position: relative;
  z-index: 10;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: var(--font-size-h1);
  font-weight: 700;
  color: var(--color-accent);
  margin-bottom: var(--space-xs);
  letter-spacing: -0.02em;
}

.stat-label {
  font-size: var(--font-size-caption);
  color: var(--color-text-tertiary);
  letter-spacing: 0.05em;
  text-transform: uppercase;
}

.stat-divider {
  width: 1rpx;
  background: var(--color-border);
}

/* 标签切换 - 极简设计 */
.tabs {
  display: flex;
  background: #fff;
  margin: 0 var(--space-lg) var(--space-lg);
  border-radius: var(--radius-md);
  padding: 6rpx;
  box-shadow: var(--shadow-sm);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: var(--space-sm) 0;
  font-size: var(--font-size-body);
  color: var(--color-text-secondary);
  border-radius: var(--radius-sm);
  transition: all var(--transition-normal);
  font-weight: 500;
}

.tab-item.active {
  background: var(--color-ink);
  color: #fff;
  box-shadow: var(--shadow-sm);
}

/* 内容列表 */
.content-list {
  padding: 0 var(--space-lg);
}

.list-item {
  display: flex;
  background: #fff;
  border-radius: var(--radius-md);
  padding: var(--space-md);
  margin-bottom: var(--space-md);
  align-items: center;
  position: relative;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-fast);
}

.list-item:active {
  transform: scale(0.98);
}

.item-thumb {
  width: 140rpx;
  height: 140rpx;
  border-radius: var(--radius-sm);
  flex-shrink: 0;
  box-shadow: var(--shadow-sm);
}

.item-content {
  flex: 1;
  margin-left: var(--space-md);
  margin-right: 50rpx;
}

.item-title {
  font-size: var(--font-size-body);
  color: var(--color-ink);
  font-weight: 600;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: var(--space-sm);
}

.item-meta {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  font-size: var(--font-size-caption);
}

.item-category {
  padding: 6rpx 14rpx;
  background: var(--color-paper);
  color: var(--color-text-secondary);
  border-radius: var(--radius-full);
  border: 1rpx solid var(--color-border);
  font-size: var(--font-size-small);
  letter-spacing: 0.02em;
}

.item-time {
  color: var(--color-text-tertiary);
}

.delete-btn {
  position: absolute;
  right: var(--space-md);
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
  opacity: 0.4;
  transition: opacity var(--transition-fast);
}

.delete-btn:active {
  opacity: 1;
}

/* 空状态 - 精致设计 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-xxl) 0;
  background: #fff;
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: var(--space-md);
  opacity: 0.3;
}

.empty-text {
  font-size: var(--font-size-body);
  color: var(--color-text-tertiary);
  letter-spacing: 0.02em;
}

/* 清空按钮 - 危险操作 */
.clear-btn {
  margin: var(--space-md) var(--space-lg);
  padding: var(--space-md);
  background: #fff;
  border-radius: var(--radius-md);
  text-align: center;
  font-size: var(--font-size-body);
  color: #ff4d4f;
  box-shadow: var(--shadow-sm);
  font-weight: 600;
  transition: all var(--transition-fast);
}

.clear-btn:active {
  background: #fff1f0;
  transform: scale(0.98);
}

/* 底部免责声明 */
.footer-disclaimer {
  text-align: center;
  padding: var(--space-xl) var(--space-lg);
  font-size: var(--font-size-small);
  color: var(--color-text-tertiary);
  line-height: 1.7;
  letter-spacing: 0.02em;
}
